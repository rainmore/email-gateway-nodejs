{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/main/types/*"
      ]
    }
  },
  "include": [
    "src/main/**/*"
  ]
}
